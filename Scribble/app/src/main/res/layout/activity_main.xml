<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf8ed"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/female"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/male"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/dp6"
         />

    <ImageButton
        android:id="@+id/male"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/female"
        app:layout_constraintRight_toLeftOf="@+id/id1"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/dp1" />

    <ImageButton
        android:id="@+id/id1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/male"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/dp2" />

    <ImageButton
        android:id="@+id/id2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/female"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toLeftOf="@+id/id3"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/dp3" />

    <ImageButton
        android:id="@+id/id3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toRightOf="@+id/id2"
        app:layout_constraintRight_toLeftOf="@+id/id4"
        app:layout_constraintTop_toBottomOf="@id/female"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/dp4" />

    <ImageButton
        android:id="@+id/id4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/id1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@+id/id3"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/dp5" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:gravity="center"
        android:background="#ed8c68"
        android:textStyle="bold"
        android:text="SELECT YOUR AVTAR" />

    <EditText
        android:id="@+id/username"
        android:layout_width="200dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/id4"
        app:layout_constraintLeft_toLeftOf="@id/id2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:maxLength="30"
        android:maxLines="1"
        android:background="@drawable/ques"
        android:paddingLeft="2dp"
        android:textSize="20dp"
        android:text=""
        />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/username"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintRight_toRightOf="@id/username"
        android:layout_marginTop="10dp"
        android:text="SAVE"
        android:textSize="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
